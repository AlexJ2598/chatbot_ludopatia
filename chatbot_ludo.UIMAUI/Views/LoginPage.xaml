<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="chatbot_ludo.UIMAUI.Views.LoginPage"
             BindingContext="{Binding Main.Login, Source={StaticResource Locator}}"
             Title="Login">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="8">
                <Label Text="Email" />
                <Entry Keyboard="Email" Placeholder="Enter your Email..." Text="{Binding Email}" />
                <Label Text="Password" />
                <Entry IsPassword="True" Placeholder="Enter your Password" Text="{Binding Password}" />
                <Button Command="{Binding LoginCommand}" Text="Login" />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>

